ul.header-inner.clearfix
  li#menu-trigger(data-target='mainmenu', ng-click="mainCtrl.isSidebarOpen = !mainCtrl.isSidebarOpen" data-ng-class="{ 'open': mainCtrl.isSidebarOpen === true }")
    .line-wrap
      .line.top
      .line.center
      .line.bottom
  li.logo.hidden-xs
    a(data-ui-sref='home', data-ng-click='mactrl.sidebarStat($event)') VET PRO 2.0
  li.pull-right
    ul.top-menu
      li#toggle-width
        .toggle-switch
          input#tw-switch(type='checkbox', hidden='hidden', data-change-layout='mactrl.layoutType')
          label.ts-helper(for='tw-switch')
      li#top-search
        a(href='', data-ng-click='hctrl.openSearch()')
          i.tm-icon.zmdi.zmdi-search
      li.dropdown(uib-dropdown='')
        a(uib-dropdown-toggle='', href='')
          i.tm-icon.zmdi.zmdi-email
          i.tmn-counts 6
        .dropdown-menu.dropdown-menu-lg.stop-propagate.pull-right
          .listview
            .lv-header
              | Messages
            .lv-body
              a.lv-item(ng-href='', ng-repeat='w in hctrl.messageResult.list')
                .media
                  .pull-left
                    img.lv-img-sm(ng-src='img/profile-pics/{{ w.img }}', alt='')
                  .media-body
                    .lv-title {{ w.user }}
                    small.lv-small {{ w.text }}
            .clearfix
            a.lv-footer(href='') View All
      li.dropdown(uib-dropdown='')
        a(uib-dropdown-toggle='', href='')
          i.tm-icon.zmdi.zmdi-notifications
          i.tmn-counts 9
        .dropdown-menu.dropdown-menu-lg.stop-propagate.pull-right
          #notifications.listview
            .lv-header
              | Notification
              ul.actions
                li
                  a(href='', data-ng-click='hctrl.clearNotification($event)')
                    i.zmdi.zmdi-check-all
            .lv-body
              a.lv-item(ng-href='', ng-repeat='w in hctrl.messageResult.list')
                .media
                  .pull-left
                    img.lv-img-sm(ng-src='img/profile-pics/{{ w.img }}', alt='')
                  .media-body
                    .lv-title {{ w.user }}
                    small.lv-small {{ w.text }}
            .clearfix
            a.lv-footer(href='') View Previous
      li.dropdown.hidden-xs(uib-dropdown='')
        a(uib-dropdown-toggle='', href='')
          i.tm-icon.zmdi.zmdi-view-list-alt
          i.tmn-counts 2
        .dropdown-menu.pull-right.dropdown-menu-lg
          .listview
            .lv-header
              | Tasks
            .lv-body
              .lv-item
                .lv-title.m-b-5 HTML5 Validation Report
                .progress
                  .progress-bar(role='progressbar', aria-valuenow='95', aria-valuemin='0', aria-valuemax='100', style='width: 95%')
                    span.sr-only 95% Complete (success)
              .lv-item
                .lv-title.m-b-5 Google Chrome Extension
                .progress
                  .progress-bar.progress-bar-success(role='progressbar', aria-valuenow='80', aria-valuemin='0', aria-valuemax='100', style='width: 80%')
                    span.sr-only 80% Complete (success)
              .lv-item
                .lv-title.m-b-5 Social Intranet Projects
                .progress
                  .progress-bar.progress-bar-info(role='progressbar', aria-valuenow='20', aria-valuemin='0', aria-valuemax='100', style='width: 20%')
                    span.sr-only 20% Complete
              .lv-item
                .lv-title.m-b-5 Bootstrap Admin Template
                .progress
                  .progress-bar.progress-bar-warning(role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100', style='width: 60%')
                    span.sr-only 60% Complete (warning)
              .lv-item
                .lv-title.m-b-5 Youtube Client App
                .progress
                  .progress-bar.progress-bar-danger(role='progressbar', aria-valuenow='80', aria-valuemin='0', aria-valuemax='100', style='width: 80%')
                    span.sr-only 80% Complete (danger)
            .clearfix
            a.lv-footer(href='') View All
      li.dropdown(uib-dropdown='')
        a(uib-dropdown-toggle='', href='')
          i.tm-icon.zmdi.zmdi-more-vert
        ul.dropdown-menu.dm-icon.pull-right
          li.skin-switch.hidden-xs
            span.ss-skin.w(ng-repeat='w in mactrl.skinList | limitTo : 6', class='bgm-{{ }}', data-ng-click='mactrl.skinSwitch(w)')
          li.divider.hidden-xs
          li.hidden-xs
            a(data-ng-click='hctrl.fullScreen()', href='')
              i.zmdi.zmdi-fullscreen
              |  Toggle Fullscreen
          li
            a(data-ng-click='hctrl.clearLocalStorage()', href='')
              i.zmdi.zmdi-delete
              |  Clear Local Storage
          li
            a(href='')
              i.zmdi.zmdi-face
              |  Privacy Settings
          li
            a(href='')
              i.zmdi.zmdi-settings
              |  Other Settings
      li.hidden-xs(data-target='chat', data-toggle-sidebar='', data-model-right='mactrl.sidebarToggle.right', data-ng-class="{ 'open': mactrl.sidebarToggle.right === true }")
        a(href='')
          i.tm-icon.zmdi.zmdi-comment-alt-text
// Top Search Content
#top-search-wrap
  .tsw-inner
    i#top-search-close.zmdi.zmdi-arrow-left(data-ng-click='hctrl.closeSearch()')
    input(type='text')
